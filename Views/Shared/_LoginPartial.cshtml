@using Microsoft.AspNetCore.Identity
@using VendaDeSementes.Data

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item3">
            <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><strong>Hello @UserManager.GetUserName(User)</strong></a>
    </li>
    <li class="nav-item4">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item1">
            <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register"><strong>Register</strong></a>

    </li>
    <li class="nav-item2">
            <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login"><strong>Login</strong></a>
    </li>
}
</ul>
