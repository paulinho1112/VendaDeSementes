@model IEnumerable<VendaDeSementes.Models.ResumoVenda>

<h2>Totalizadores de Vendas</h2>
<table class="table">
    <thead>
        <tr>
            <th>Consumidor</th>
            <th>Produto</th>
            <th>Quantidade Total</th>
            <th>Valor Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Consumidor</td>
                <td>@item.Produto</td>
                <td>@item.QuantidadeTotal</td>
                <td>@item.ValorTotal.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<h3>Valor Total Global: @ViewBag.ValorTotalGlobal.ToString("C")</h3>

