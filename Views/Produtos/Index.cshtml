@model IEnumerable<VendaDeSementes.Models.Produto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>PRODUTOS</h1>

<p>
    <a class="waves-effect waves-light btn" asp-action="Create">Criar um novo</a>
    <a class="waves-effect waves-light btn" asp-controller="Consultas" asp-action="FiltrarProdutos">Filtrar Produtos</a>
    <a class="waves-effect waves-light btn" asp-controller="Produtos" asp-action="GerarProdutos">Produtos Gerados</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.semente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.semente.descricao)
            </td>
                <td>
                    <a class="btn-floating btn-Small waves-effect waves-light bleu" asp-action="Edit" asp-route-id="@item.id"><i class="large material-icons">create</i></a>
                    <a class="btn-floating btn-Small waves-effect waves-light green" asp-action="Details" asp-route-id="@item.id"><i class="large material-icons">info_outline</i></a>
                    <a class="btn-floating btn-Small waves-effect waves-light red" asp-action="Delete" asp-route-id="@item.id"><i class="large material-icons">delete</i></a>

                </td>
        </tr>
}
    </tbody>
</table>
